# ========================================
# Social Platform API Credentials
# ========================================
# Copy this to .env and fill in your values.
# NEVER commit .env to git.

# --- X/Twitter ---
# Apply at: https://developer.x.com/en/portal/dashboard
# Needs: Read and Write permissions
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# --- LinkedIn ---
# Apply at: https://www.linkedin.com/developers/
# Needs: w_member_social scope
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_PERSON_URN=urn:li:person:YOUR_ID

# --- Facebook/Instagram ---
# Apply at: https://developers.facebook.com/
# Needs: pages_manage_posts, instagram_basic, instagram_content_publish
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# --- Bluesky ---
# Your Bluesky handle and app password
# Create app password at: Settings > App Passwords
BLUESKY_HANDLE=wonderwomancode.bsky.social
BLUESKY_APP_PASSWORD=

# --- Mastodon ---
# Create app at: Your Instance > Preferences > Development > New Application
# Needs: write:statuses scope
MASTODON_INSTANCE=https://hachyderm.io
MASTODON_ACCESS_TOKEN=

# --- Farcaster ---
# Via Neynar API: https://neynar.com/
# Alternative: Direct hub connection
NEYNAR_API_KEY=
FARCASTER_SIGNER_UUID=

# --- Lens Protocol ---
# Via Lens API
LENS_PROFILE_ID=
LENS_ACCESS_TOKEN=

# --- Medium ---
# Get at: https://medium.com/me/settings/security (Integration tokens)
# Note: Medium API is limited; RSS monitoring is more reliable
MEDIUM_USERNAME=wonderwomancode
MEDIUM_INTEGRATION_TOKEN=

# --- Threads ---
# Via Meta's Threads API (requires Instagram connection)
# Apply at: https://developers.facebook.com/
THREADS_USER_ID=
THREADS_ACCESS_TOKEN=

# --- Reddit ---
# Create app at: https://www.reddit.com/prefs/apps
# Select "script" type, redirect URI: http://localhost:8080
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=wonderwomancode
REDDIT_PASSWORD=

# --- TikTok ---
# Apply at: https://developers.tiktok.com/
# Requires app review for Content Posting API
TIKTOK_ACCESS_TOKEN=
TIKTOK_OPEN_ID=

# ========================================
# Configuration
# ========================================

# How often to check for new posts (in seconds)
MONITOR_INTERVAL=300

# Dry run mode (set to "true" to preview without posting)
DRY_RUN=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info
